<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_designs"
        android:weightSum="9">

        <ImageView
            android:id="@+id/upload_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            app:srcCompat="@drawable/ic_song_image_icon" />

        <TextView
            android:id="@+id/upload_filename"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/forum"
            android:gravity="center_vertical"
            android:text="Filename.type"
            android:textColor="#ffffff"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/upload_loading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            app:srcCompat="@drawable/progress" />
    </LinearLayout>
</RelativeLayout>